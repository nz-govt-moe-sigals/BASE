{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountResourceMode": {
            "type": "string",
            "minLength": 1,
            "defaultValue": "Incremental",
            "allowedValues": [
                "Incremental"
            ]
        },
        "storageAccountName": {
            "type": "string",
            "minLength": 4
        },
        "storageAccountLocation": {
            "type": "string",
            "allowedValues": [
                "Australia East",
                "Australia Southeast"
            ],
            "defaultValue": "[resourceGroup().location]"
        },
        "storageAccountSku": {
            "type": "string",
            "allowedValues": [
                "Storage",
                "StorageV2",
                "BlobStorage"
            ],
            "defaultValue": "Storage"
        },
        "storageAccountKind": {
            "type": "string"
        }
    },
    "variables": {
        "currentTemplateUrl": "[deployment().properties.templateLink.uri]",
        "currentTemplateUriRoot": "[uri(deployment().properties.templateLink.uri, '')]",
        "storageAccount": {
            "resourceMode": "[parameters('storageAccountResourceMode')]",
            "resourceName": "[parameters('storageAccountResourceName')]",
            "resourceType": "Microsoft.Storage/storageAccounts",
            "resourceLocation": "[parameters('storageAccountResourceLocation')]",
            "resourceSku": "[parameters('storageAccountResourceSku')]",
            "kind": "[parameters('storageAccountKind')]"
        }
    },
    "resources": [
        {
            "dependsOn": [],
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2017-10-01",
            "name": "[variables('storageAccount').resourceName]",
            "resourceLocation": "[variables('storageAccount').resourceLocation]",
            "sku": {
                "name": "[variables('storageAccount').resourceSku)]"
            },
            "kind": "[variables('storageAccount').kind]",
            "tags": {},
            "properties": {
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "services": {
                        "blob": {
                            "enabled": true
                        },
                        "file": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                }
            }
        }
    ],
    "outputs": {
        "resourceId": {
            "value": "[resourceId(variables('storageAccount').resourceType, variables('storageAccount').resourceName)]",
            "type": "string"
        }
    }
}