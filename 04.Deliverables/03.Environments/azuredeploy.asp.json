{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceGroupLocation": {
            "type": "string",
            "minLength": 1,
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The location within which to develop the Resources."
            }
        },
      "serverFarmName": {
        "type": "string",
        "minLength": 1
      },
      "serverFarmSkuName": {
        "type": "string",
        "defaultValue": "B1",
        "allowedValues": [
          "F1",
          "D1",
          "B1",
          "B2",
          "B3",
          "S1",
          "S2",
          "S3",
          "P1",
          "P2",
          "P3",
          "P4"
        ],
        "metadata": {
          "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
        }
      }
    },
    "variables": {
    },
    "resources": [
      {
        "name": "[parameters('serverFarmName')]",
        "type": "Microsoft.Web/serverfarms",
        "location": "[parameters('resourceGroupLocation')]",
        "apiVersion": "2015-08-01",
        "sku": {
          "name": "[parameters('serverFarmSkuName')]"
        },
        "dependsOn": [],
        "tags": {
          "displayName": "Server Farm"
        },
        "properties": {
          "name": "[parameters('serverFarmName')]",
          "numberOfWorkers": 1
        }
      }
    ],
    "outputs": {
      "appServicePlanResourceId": {
        "value": "[resourceId('Microsoft.Web/serverfarms', parameters('serverFarmName'))]",
        "type": "string"
      }
    }
  }
  