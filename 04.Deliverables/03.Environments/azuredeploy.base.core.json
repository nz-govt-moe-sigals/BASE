{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceLocation": {
            "metadata": {
                "description": "The default location within which to develop the Resources Group and its child Resources."
            },
            "type": "string",
            "minLength": 1,
            "allowedValues": [
                "Australia East",
                "Australia Southeast"
            ],
            "defaultValue": "[resourceGroup().location]"
        },
        "resourceNameTemplate": {
            "metadata": {
                "description": "The default name template for Resources (eg: 'MYORG-MYAPP-{ENVID}-{RESOURCETYPE}')'."
            },
            "type": "string",
            "minLength": 6
        },
        "armTemplateRootUri": {
            "metadata": {
                "description": "The relative or otherwise base url for finding ARM Templates to download (replaces '{TEMPLATEFILENAME}' within strings, where found)."
            },
            "type": "string",
            "minLength": 0
        },
        "armTemplateParameterRootUri": {
            "metadata": {
                "description": "The relative or otherwise base url for finding ARM Templates Parameters to download (replaces '{TEMPLATEFILENAME}' within strings, where found)."
            },
            "type": "string",
            "minLength": 0
        },
        "webServerFarmSku": {
            "metadata": {
                "description": "App Service server pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
            },
            "type": "string",
            "defaultValue": "S1",
            "allowedValues": [
                "F1",
                "D1",
                "B1",
                "S1",
                "S2"
            ]
        },
        "sqlServerSku": {
            "metadata": {
                "description": "App Service server pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
            },
            "type": "string",
            "defaultValue": "S1",
            "allowedValues": [
                "Basic",
                "S0",
                "S1",
                "S2"
            ]
        },
        "sqlServerAdministratorLogin": {
            "metadata": {
                "description": "administrator Login for when creating new SqlServers."
            },
            "type": "securestring",
            "minLength": 6
        },
        "sqlServerAdministratorPassword": {
            "metadata": {
                "description": "administrator Password for when creating new SqlServers."
            },
            "type": "securestring",
            "minLength": 12
        },
        "defaultSqlDatabaseServerName": {
            "metadata": {
                "description": "If provided, look for specified database server, and create the database there. It's cheaper to reuse a common db (but it should be outside this Resource group)."
            },
            "type": "string",
            "minLength": 0,
            "defaultValue": ""
        }
    },
    "variables": {
        "metadata": {
            "comments00": "So...Templates are a set of sequential parameters, variables, resources, output sections for a reason.",
            "comments01": "Using the Variables to shape the incoming Parameters, using Functions.",
            "comments02": "Variables are grouped as complex objects. Note that when later referencing",
            "comments03": "child properties, the dot is *outside* the top var name: `variables('top').childProperty`"
        },
        "uniqueResourceId": "[uniqueString(resourceGroup().id)]",
        "currentTemplateUri": "[deployment().properties.templateLink.uri]",
        "currentTemplateUriRoot": "[uri(deployment().properties.templateLink.uri, '')",
        "resourceNamePrefix": "azuredeploy.base.core",
        "armTemplateRootUri": "[coalesce(parameters('armTemplateRootUri'), parameters('currentTemplateUriRoot')]",
        "resourceLocation": "[parameters('resourceLocation')]",
        "resourceNameTemplate": "[parameters('resourceNameTemplate')]",
        "resource": {
            "currentTemplateUri": "[deployment().properties.templateLink.uri]",
            "currentTemplateUriRoot": "[uri(deployment().properties.templateLink.uri, '')",
            "uniqueId": "[uniqueString(resourceGroup().id)]",
            "location": "[parameters('resourceLocation')]",
            "armTemplateRootUri": "[coalesce(parameters('armTemplateRootUri'), parameters('currentTemplateUriRoot')]",
            "resourceNameTemplate": "[parameters('resourceNameTemplate')]"
        },
        "webServerFarm": {
            "id": "[concat(variables('resourceNamePrefix'),'.appServicePan' )]",
            "armPath": "[concat(variables('armTemplateRootUri'), '/', variables('resourceNamePrefix'),'.webServerFarm', '.json' )]",
            "location": "[parameters('resourceLocation')]",
            "sku": "[parameters('webServerFarmSku')]",
            "name": "[replace(parameters('resourceNameTemplate'), '{RESOURCETYPE}', 'WSF')]"
        },
        "storageAccount": {
            "id": "[concat(variables('resourceNamePrefix'),'.storageAccount')]",
            "armPath": "[concat(variables('armTemplateRootUri'), '/', variables('resourceNamePrefix'),'.storageAccount', '.json')]",
            "location": "[parameters('resourceLocation')]",
            "name": "[replace(parameters('resourceNameTemplate'), '{RESOURCETYPE}', 'SA')]"
        },
        "sqlServer": {
            "id": "[concat(variables('resourceNamePrefix'),'.sqlServerDatabaseServer')]",
            "armPath": "[concat(variables('armTemplateRootUri'), '/', variables('resourceNamePrefix'),'.sqlServerDatabaseServer', '.json')]",
            "Administrator": {
                "sku": "[coalesce(parameters('sqlServerSku'), parameters('webServerFarmSku') )]",
                "login": "[parameters('sqlServerAdministratorLogin')]",
                "password": "[parameters('sqlServerAdministratorPassword')]"
            }
        },
        "sqlServerDatabase": {
            "id": "[concat(variables('resourceNamePrefix'),'.sqlServerDatabase')]",
            "armPath": "[concat(variables('armTemplateRootUri'), '/', variables('resourceNamePrefix'),'.sqlServerDatabase', '.json')]"
        }
    },
    "resources": [
        {
            "comments": "Ensures a Resource Group scoped unique App Service Plan",
            "name": "[variables('webServerFarm').id]",
            "apiVersion": "2017-05-10",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('webServerFarm').armPath]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "resourceLocation": {
                        "value": "[variables('webServerFarm').location]"
                    },
                    "sku": {
                        "value": "[variables('webServerFarm').sku]"
                    },
                    "name": {
                        "value": "[variables('webServerFarm').name]"
                    }
                }
            }
        },
        {
            "comments": "Ensures a Resource Group scoped unique Storage Account",
            "name": "[variables('storageAccount').id]",
            "apiVersion": "2017-05-10",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('storageAccount').armPath]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "resourceLocation": {
                        "value": "[variables('storageAccount').location]"
                    },
                    "name": {
                        "value": "[variables('storageAccount').name]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "uniqueResourceId": {
            "type": "string",
            "value": "[variables('uniqueResourceId')]",
            "metadata": {
                "description": "The ResourceGroup scoped unique 13 character Id."
            }
        },
        "resourceNameName": {
            "type": "string",
            "value": "[parameters('resourceNameTemplate')]"
        }
    }
}