{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceLocation": {
            "type": "string",
            "minLength": 1,
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The location within which to develop the App Service plan resource."
            }
        },
      "name": {
        "type": "string",
        "minLength": 1
      },
      "sku": {
        "type": "string",
        "defaultValue": "S1",
        "allowedValues": [
          "F1",
          "D1",
          "B1",
          "S1",
          "S2"
        ],
        "metadata": {
          "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
        }
      }
    },
    "variables": {
      "currentTemplateUri": "[deployment().properties.templateLink.uri]",
      "currentTemplateUriRoot": "[uri(deployment().properties.templateLink.uri, '')"
  },
    "resources": [
      {
        "name": "[parameters('name')]",
        "type": "Microsoft.Web/serverfarms",
        "location": "[parameters('resourceLocation')]",
        "apiVersion": "2015-08-01",
        "sku": {
          "name": "[parameters('sku')]"
        },
        "dependsOn": [],
        "tags": {
          "displayName": "Server Farm"
        },
        "properties": {
          "name": "[parameters('name')]",
          "numberOfWorkers": 1
        }
      }
    ],
    "outputs": {
      "appServicePlanResourceId": {
        "value": "[resourceId('Microsoft.Web/serverfarms', parameters('name'))]",
        "type": "string"
      }
    }
  }
  