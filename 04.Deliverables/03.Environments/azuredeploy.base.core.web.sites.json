{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webSiteResourceName": {
            "type": "string",
            "minLength": 1
        },
        "webSiteResourceLocation": {
            "type": "string",
            "minLength": 1,
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The location within which to develop the App Service plan resource."
            }
        },
        "webSiteWebServerFarmResourceId": {
            "type": "string",
            "minLength": 1,
            "defaultValue": "",
            "metadata": {
                "description": "The resourceId retrieved as output from invoking the webFarm ARM template earlier (using 'dependsOn')."
            }
        }
    },
    "variables": {
        "resources": {},
        "web": {
            "site": {
                "resourceType": "Microsoft.Web/sites",
                "resourceName": "[parameters('webSiteResourceName')]",
                "resourceLocation": "[parameters('webSiteResourceLocation')]"
            }
        }
    },
    "resources": [
        {
            "dependsOn": [],
            "type": "Microsoft.Web/sites",
            "scale": null,
            "tags": {
                "displayName": "Web Site"
            },
            "properties": {
                "mode": "[variables('web').site.resourceMode')]",
                "name": "[variables('web').site.resourceName')]",
                "serverFarmId": "[parameters('serverFarmResourceId')]"
            },
            "resources": [],
            "comments": "This depends on the Web Site being deployed first, and picking up its output (resourceId)."
        }
    ],
    "outputs": {}
}